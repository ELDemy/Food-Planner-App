<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardCountry"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:clickable="true"
    app:cardCornerRadius="24dp"
    app:cardUseCompatPadding="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minWidth="160dp"
        android:padding="24dp">

        <ImageView
            android:id="@+id/tools_imgIngredients"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/rounded_category_shape"
            android:padding="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/earth" />

        <TextView
            android:id="@+id/tools_tvTitleIngredient"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="By Country"
            android:textColor="@color/text_primary"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tools_imgIngredients" />

        <TextView
            android:id="@+id/tools_tvSubtitleIngredients"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Explore cuisines"
            android:textColor="@color/text_hint"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tools_tvTitleIngredient" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
