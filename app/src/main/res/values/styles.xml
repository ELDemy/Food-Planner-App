<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="sign_in_to_">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#6A7282</item>
    </style>

    <style name="welcome_bac">
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">#1E2939</item>
    </style>

    <style name="email">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#4A5565</item>
    </style>

    <style name="enter_your_">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#800A0A0A</item>
    </style>

    <style name="forgot_pass">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#00A63E</item>
    </style>

    <style name="AppButton" parent="Widget.Material3.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>

        <item name="android:background">@drawable/button_bg</item>
        <item name="android:textColor">?attr/colorOnPrimaryContainer</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>

        <item name="cornerRadius">12dp</item>
    </style>


    <!-- Base App Theme -->
    <style name="Theme_MyApp" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowBackground">@color/bg_light</item>
    </style>

    <!-- Text Styles -->
    <style name="Text_Title">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text_Body">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <style name="Text_Caption">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/text_hint</item>
    </style>

    <!-- Buttons -->
    <style name="Button_Primary">
        <item name="android:backgroundTint">@color/primary</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Button_Success">
        <item name="android:backgroundTint">@color/success</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Button_Error">
        <item name="android:backgroundTint">@color/error</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
    </style>


</resources>